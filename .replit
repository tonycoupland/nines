modules = ["python-3.11", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["nodejs", "cordova", "php82", "php82Extensions.pgsql", "php82Extensions.mbstring", "php82Extensions.curl", "php82Extensions.openssl", "php82Extensions.tokenizer", "php82Extensions.zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Reverb WebSocket"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Phaser Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Production"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build Development"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Main Server"

[[workflows.workflow]]
name = "Laravel Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=8080"
waitForPort = 8080

[[workflows.workflow]]
name = "Reverb WebSocket"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan reverb:start --host=0.0.0.0 --port=8081"

[[workflows.workflow]]
name = "Phaser Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./node_modules/.bin/webpack serve --config webpack.config.cjs --mode=development --host=0.0.0.0 --port=3000"
waitForPort = 3000

[[workflows.workflow]]
name = "Build Production"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.config.cjs --mode=production"

[[workflows.workflow]]
name = "Build Development"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx webpack --config webpack.config.cjs --mode=development"

[[workflows.workflow]]
name = "Main Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 8081
externalPort = 8081
