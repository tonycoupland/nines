modules = ["python-3.11", "nodejs-20", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["nodejs", "cordova", "php82", "php82Extensions.pgsql", "php82Extensions.mbstring", "php82Extensions.curl", "php82Extensions.openssl", "php82Extensions.tokenizer", "php82Extensions.zip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Phaser MEGA TIC TAC TOE"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Reverb WebSocket"

[[workflows.workflow]]
name = "Phaser MEGA TIC TAC TOE"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./node_modules/.bin/webpack serve --mode=development --host=0.0.0.0 --port=5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Laravel Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && php artisan serve --host=0.0.0.0 --port=8000"
waitForPort = 8000

[[workflows.workflow]]
name = "Reverb WebSocket"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && php artisan reverb:start --host=0.0.0.0 --port=8080 --debug"
waitForPort = 8080

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080
