<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.megatictactoe" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MEGA TIC TAC TOE</name>
    <description>
        Strategic MEGA TIC TAC TOE game with 9 interconnected grids. Built with Phaser.js for mobile deployment.
    </description>
    <author email="dev@example.com" href="http://cordova.io">
        Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <!-- iOS Configuration -->
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        
        <!-- iOS 15.0 minimum deployment target -->
        <preference name="deployment-target" value="15.0" />
        <preference name="target-device" value="universal" />
        
        <!-- Disable bounce and overscroll for better game experience -->
        <preference name="DisallowOverscroll" value="true" />
        <preference name="webviewbounce" value="false" />
        <preference name="UIWebViewBounce" value="false" />
        
        <!-- Fullscreen mode -->
        <preference name="Fullscreen" value="false" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#667eea" />
        <preference name="StatusBarStyle" value="lightcontent" />
        
        <!-- Performance optimizations -->
        <preference name="WKWebViewOnly" value="true" />
        <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
        
        <!-- App icons and launch images (to be added later) -->
        <icon src="res/icon/ios/icon.png" width="57" height="57" />
        <icon src="res/icon/ios/icon@2x.png" width="114" height="114" />
        <icon src="res/icon/ios/icon-72.png" width="72" height="72" />
        <icon src="res/icon/ios/icon-72@2x.png" width="144" height="144" />
    </platform>
    
    <!-- Android Configuration -->
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- Android settings -->
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
        
        <!-- Disable bounce and overscroll for better game experience -->
        <preference name="DisallowOverscroll" value="true" />
        <preference name="webviewbounce" value="false" />
        
        <!-- Fullscreen mode -->
        <preference name="Fullscreen" value="false" />
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#667eea" />
        <preference name="StatusBarStyle" value="lightcontent" />
        
        <!-- App icons (to be added later) -->
        <icon src="res/icon/android/ldpi.png" density="ldpi" />
        <icon src="res/icon/android/mdpi.png" density="mdpi" />
        <icon src="res/icon/android/hdpi.png" density="hdpi" />
        <icon src="res/icon/android/xhdpi.png" density="xhdpi" />
    </platform>
    
    <!-- Global Preferences -->
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-windowSoftInputMode" value="adjustResize" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="false" />
    
    <!-- Required Cordova plugins -->
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
</widget>